@model cepdiWebApp.Models.ViewModels.Sesion

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login page";
}

<br />
<br />
<br />
<br />

<div class="text-center">
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row justify-content-md-center">
            <div class="col-md-4 shadow-lg p-3 bg-white rounded">

                <main class="form-signin">
                    @using (Html.BeginForm("Entrar", "Login", FormMethod.Post))
                    {
                    <form>
                        <br />
                            <br />
                            <div class="container">
                                    <picture>
                                        <img src="~/resources/cepdi.png" class="img-fluid img-thumbnail" alt="">
                                    </picture>
                            </div>

                            <br />

                            <div class="form-floating">
                                @Html.TextBoxFor(m => m.Usuario, new { placeholder = "#####", @class = "form-control" })
                                @Html.LabelFor(m => m.Usuario)
                            </div>
                            <div class="form-floating">
                                @Html.PasswordFor(m => m.Contraseña, new { placeholder = "#####", @class = "form-control" })
                                @Html.LabelFor(m => m.Contraseña)
                            </div>
                            <br />
                        @*<div class="form-floating">
                          <input type="email" class="form-control" id="floatingInput" placeholder="#####">
                          <label for="floatingInput">Usuario</label>
                        </div>
                        <div class="form-floating">
                          <input type="password" class="form-control" id="floatingPassword" placeholder="#####">
                          <label for="floatingPassword">Contraseña</label>
                        </div>*@

                        <div class="checkbox mb-3">
                          @*<label>
                            <input type="checkbox" value="mantener-sesion"> Mantener sesión iniciada
                          </label>*@
                              <label>
                                @Html.CheckBoxFor(m => m.MantenerSesionIniciada)
                                @Html.LabelFor(m => m.MantenerSesionIniciada)
                              </label>
                        </div>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
                      </form>
                  }
                </main>

            </div>
        </div>
    </div>
</div>

